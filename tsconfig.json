{
    "include": [
        "ClientApp/**/*",
        "typings.d.ts",
        "test/unit/**/*"
    ],
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@app/*": ["ClientApp/*"],
            "@components/*": ["ClientApp/components/*"],
            "@store/*": ["ClientApp/store/*"]
        },
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5",
        "sourceMap": true,
        "skipLibCheck": true,
        "types": [
            "chai",
            "mocha",
            "node",
            "sinon",
            "sinon-chai",
            "webpack-env"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "strict": false,
        "lib": ["es2015", "dom", "es2017"],
        "allowJs": true
    },
    "exclude": [
        "bin",
        "node_modules"
    ]
}
