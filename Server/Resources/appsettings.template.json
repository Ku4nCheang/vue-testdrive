{
  "ProtectSecrets": [
    "Server:Certificate:Password",
    "Authenticate:JwtBearer:Issuer,Audience,Secret",
    "Database:SQLServer,Redis"
  ],
  "Server": {
    "Port": 5000,
    "SSLPort": 5001,
    "UseHttps": true,
    "UseGZip": true,
    "Certificate": {
      "CertName" : "<FILE_NAME>",
      "Password": "<PASSWORD>"
    }
  },
  "Authenticate": {
    "Identity": {
      "Password": {
        "RequireDigit": true,
        "RequiredLength": 8,
        "RequireNonAlphanumeric": false,
        "RequireUppercase": true,
        "RequireLowercase": false,
        "RequiredUniqueChars": 6
      },
      "Lockout": {
        "DefaultLockoutTimeSpanValue": 30,
        "MaxFailedAccessAttempts": 10,
        "AllowedForNewUsers": true
      },
      "User": {
        "RequireUniqueEmail": true  
      }
    },
    "JwtBearer": {
      "Issuer": "localhost",
      "Audience": "localhost",
      "Secret": "<SECRET_KEY>"
    }
  },
  "Database": {
    "UseInMemory": true,
    "SQLServer": "Server=<HOST>;Database=<DB_NAME>;User Id=<USER_ID>;Password=<PASSWORD>;",
    "Redis": "localhost,allowAdmin=true"
  },
  "Logging": {
    "IncludeScopes": false,
    "Debug": {
      "LogLevel": {
        "Default": "Warning",
        "System": "Warning",
        "Microsoft": "Warning"
      }
    },
    "Console": {
      "LogLevel": {
        "Default": "Warning",
        "System": "Warning",
        "Microsoft": "Warning"
      }
    }
  }
}
